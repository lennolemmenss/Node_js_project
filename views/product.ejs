<!-- views/products.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Producten</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Montserrat', sans-serif; /* Gebruik het Google Font */
    }
    .container {
      padding-top: 50px;
      text-align: center; 
    }
    #products {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      margin-top: 80px; /* Voeg meer marge toe tussen de titel en de producten */
    }
    .card {
      margin: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s ease-in-out;
    }
    .card:hover {
      transform: scale(1.05);
    }

    #categoryFilterForm label {
    font-size: 14px; /* Aangepaste tekstgrootte */
    margin-right: 5px; /* Ruimte toevoegen aan de rechterkant van de tekst */
    }


  </style>
</head>
<body class="bg-light">
  <!-- Navigatiebalk -->
  <%- include('header', { title: 'Producten' }) %>

  <% function getCategoryName(categoryId) { %>
    <% const category = categories.find(c => c.id === categoryId); %>
    <% return category ? category.naam : 'Uncategorized'; %>
  <% } %>

  <div class="container">
    <h1 class="mt-5 display-4">Keyboards</h1>

    <!-- Filter voor categorieën -->
    <form id="categoryFilterForm">
      <label for="categoryFilter">Filter op categorie:</label>
      <select id="categoryFilter" class="form-control" onchange="filterProducts()">
        <option value="all">Alle categorieën</option>
        <% categories.forEach(category => { %>
          <option value="<%= category.id %>"><%= category.naam %></option>
        <% }); %>
      </select>
    </form>

    <div id="products" class="row">
      <% products.forEach(product => { %>
        <div class="col-md-4 mb-4 category-<%= product.category_id %>">
          <div class="card">
            <img src="/uploads/<%= product.foto %>" class="card-img-top" alt="<%= product.naam %>">
            <div class="card-body">
              <h5 class="card-title"><%= product.naam %></h5>
              <p class="card-text">Merk: <%= product.merk %></p>
              <p class="card-text">Prijs: €<%= product.prijs %></p>
              <p class="card-text">Category: <%= getCategoryName(product.category_id) %></p>
              <form action="update-product/<%= product.id %>" method="GET">
                <button type="submit" class="btn btn-primary">Update product</button>
              </form>
              <br>
              <form action="delete-product/<%= product.id %>" method="POST" onsubmit="return confirm('Weet je zeker dat je dit product wilt verwijderen?')">
                <button type="submit" class="btn btn-danger">Delete product</button>
              </form>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

 
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    function filterProducts() {
      var selectedCategory = document.getElementById('categoryFilter').value;

      // Verberg alle producten
      var products = document.querySelectorAll('#products .col-md-4');
      products.forEach(product => {
        product.style.display = 'none';
      });

      // Toon alleen producten van de geselecteerde categorie
      if (selectedCategory === 'all') {
        products.forEach(product => {
          product.style.display = 'block';
        });
      } else {
        var filteredProducts = document.querySelectorAll(`#products .category-${selectedCategory}`);
        filteredProducts.forEach(product => {
          product.style.display = 'block';
        });
      }
    }
  </script>
</body>
</html>
